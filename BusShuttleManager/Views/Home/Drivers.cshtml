@model IEnumerable<BusShuttleManager.Models.DriverViewModel>
@{
    ViewData["Title"] = "Drivers";
}

<style>
        /* Add your CSS styles here */
        /* Example styles for navigation bar */
        .navbar {
            overflow: hidden;
            background-color: #333;
        }

        .navbar a {
            float: left;
            display: block;
            color: white;
            text-align: center;
            padding: 14px 20px;
            text-decoration: none;
        }

        .navbar a:hover {
            background-color: #ddd;
            color: black;
        }
    </style>

<div class="navbar">
    <a asp-action="Drivers">Drivers</a>
    <a asp-action="Busses">Busses</a>
    <a asp-action="Routes">Routes</a>
    <a asp-action="Stops">Stops</a>
    <a asp-action="Loops">Loops</a>
</div>

<h2>Drivers</h2>
<a asp-action="CreateDriver">Add new driver</a>

<table class="dataTable">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.LastName)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>
                    <a asp-action="UpdateDriver" asp-route-id="@item.Id">Edit</a> | 
                    <a asp-action="DeleteDriver" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>