@model IEnumerable<BusShuttleManager.Models.BusViewModel>
@{
    ViewData["Title"] = "Busses";
}

<style>
        /* Add your CSS styles here */
        /* Example styles for navigation bar */
        .navbar {
            overflow: hidden;
            background-color: #333;
        }

        .navbar a {
            float: left;
            display: block;
            color: white;
            text-align: center;
            padding: 14px 20px;
            text-decoration: none;
        }

        .navbar a:hover {
            background-color: #ddd;
            color: black;
        }
    </style>

<div class="navbar">
    <a href="/">Drivers</a>
    <a href="/Busses">Busses</a>
    <a href="/Routes">Routes</a>
    <a href="/Stops">Stops</a>
    <a href="/Loops">Loops</a>
</div>


<h2>Busses</h2>
<button asp-action="Add Bus">Create new bus</button>

<table class="dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BusName)
                </td>
                <td>
                    <button asp-action="Edit" asp-Routes-id="@item.Id">Edit</button> | <button asp-action="Delete" 
                    asp-Routes-id="@item.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>