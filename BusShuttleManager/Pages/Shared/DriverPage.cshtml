@model BusShuttleManager.Models.DriverPageViewModel
@{
    ViewData["Title"] = "Driver Page";
}

<h2>Driver Page</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignDriverToLoop">
            <div class="form-group">
                <label for="loopId">Select Loop:</label>
                <select class="form-control" id="loopId" name="loopId">
                    @foreach (var loop in Model.Loops)
                    {
                        <option value="@loop.Id">@loop.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="busId">Select Bus:</label>
                <select class="form-control" id="busId" name="busId">
                    @foreach (var bus in Model.Busses)
                    {
                        <option value="@bus.Id">@bus.BusName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="driverId">Select Driver:</label>
                <select class="form-control" id="driverId" name="driverId">
                    @foreach (var driver in Model.Drivers)
                    {
                        <option value="@driver.Id">@driver.FirstName @driver.LastName</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Assign Driver</button>
        </form>
    </div>
</div>
